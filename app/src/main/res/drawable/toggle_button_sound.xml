<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/transparent_pressed" />
        </shape>
    </item>
    <item android:state_checked="true" android:drawable="@drawable/calculator_toggle_button_sound_on">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/transparent" />
            <stroke android:width="0.20000005dip" android:color="#ff000000" />
        </shape>
    </item>
    <item android:state_checked="false" android:drawable="@drawable/calculator_toggle_button_sound">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/transparent" />
            <stroke android:width="0.20000005dip" android:color="#ff000000" />
        </shape>
    </item>
</selector>